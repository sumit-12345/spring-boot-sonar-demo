pipeline {
    agent any

    tools {
        jdk 'JDK17'
        maven 'Maven3'
    }

    environment {
        APP_NAME = 'spring-boot-sonar-demo'
        IMAGE_NAME = 'spring-boot-sonar-demo'
    }

    stages {

        stage('Clone Repository') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/your-username/spring-boot-sonar-demo.git'
            }
        }

        stage('Build & Test') {
            steps {
                bat 'mvn clean package'
            }
        }

        stage('Docker Build') {
            steps {
                bat '''
                docker build -t %IMAGE_NAME%:latest .
                '''
            }
        }
    }

    post {
        success {
            echo '✅ Repository cloned, build completed, and Docker image created successfully'
        }
        failure {
            echo '❌ Pipeline failed'
        }
    }
}
